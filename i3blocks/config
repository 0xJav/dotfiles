command=~/.local/src/blocks/$BLOCK_NAME
separator_block_width=20
markup=none

[window]
command=xdotool getactivewindow getwindowname
markup=pango
interval=repeat
color=#A9A9A9
min_width=800
align=center

[cpu]
label=CPU 
interval=1

[ram]
command=echo -n 'RAM '; ~/.local/src/i3blocks-contrib/memory/memory | grep -E -o '^[0-9]+.[0-9]G'
interval=1
color=#A9A9A9

[iface]
command= ~/.local/src/i3blocks-contrib/iface/iface
interval=1
color=#7e8e50

[datetime]
interval=1
color=#7cafc2

